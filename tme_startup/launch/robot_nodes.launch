        <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' ">
            <param name="base_frame" value="$(arg robot_name)/base_link"/>
            <param name="odom_frame" value="$(arg robot_name)/odom"/>
            <param name="map_frame" value="$(arg robot_name)/map"/>
            <param name="scan_topic" value="/$(arg robot_name)/scan"/>
            <param name="pub_map_odom_transform" value="True"/>
            <param name="map_size" value="1040"/>
            <rosparam file="$(find tme_startup)/config/$(arg robot_name)/hector_params.yaml" command="load"/>
            <!-- 
            <param name="map_pub_period" value="5"/>
            -->
            <param name="map_update_distance_thresh" value="0.2"/>
            <param name="map_update_angle_thresh" value="0.4"/>
            
            <param name="use_tf_pose_start_estimate" value="True"/>
            <param name="use_tf_scan_transformation" value="False"/>
            <param name="tf_map_scanmatch_transform_frame_name" value="$(arg robot_name)/scanmatch"/>
        </node>
